<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_48dp">

    <ImageView
        android:src="@drawable/cate_shequ"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_width="@dimen/size_22dp"
        android:layout_height="@dimen/size_22dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:id="@+id/my_image" />


    <TextView
        android:text="@string/my_shequ"
        android:textSize="@dimen/size_24px"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView"
        android:layout_toEndOf="@+id/my_image" />

    <ImageView
        android:layout_marginRight="@dimen/size_10dp"
        android:src="@drawable/ic_chevron_right_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:id="@+id/imageView2"
        android:layout_alignBottom="@+id/my_image"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
</LinearLayout>