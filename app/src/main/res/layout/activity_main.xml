<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.eighteenartisan.MainActivity">

    <include
        layout="@layout/home_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_56dp" />

    <com.example.administrator.eighteenartisan.base.BannerLayout
        android:id="@+id/layout_banner"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100dp" />

    <include
        layout="@layout/my_shequ"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_42dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/darkgray" />

    <android.support.v4.view.ViewPager
        android:id="@+id/layout_banner_shequ"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_140dp" />

    <include
        layout="@layout/home_xydian"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/darkgray" />

    <include
        layout="@layout/home_xsqianggou"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_48dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1px"
        android:background="@color/darkgray" />
    <com.example.administrator.eighteenartisan.base.BannerLayout
        android:id="@+id/layout_banners"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100dp" />
</LinearLayout>
